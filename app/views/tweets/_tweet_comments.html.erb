<!-- comment comments  -->

<% comments.each do |comment| %>
  <div class="comment-card box">
    <article class="media">
      <div class="media-content">
        <div class="content">
          <div class="header">
            <%= link_to '' do %> <!-- Replace with user profile link -->
              <p>
                <strong><%= comment.author&.name %></strong>
                <small>@<%= comment.author&.username %></small>
              </p>
            <% end %>
          </div>
          <div class="body">
            <p><%= comment.body %></p>
          </div>
        </div>
        <nav class="actions level">
          <div class="level-left">
            <%= link_to 'Like' %>
          </div>
          <div class="level-right">
            <% if signed_in? && current_user.id == comment.author_id %>
              <%= link_to comment_path(comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } do %>
                <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
              <% end %>
            <% end %>
          </div>
        </nav>
      </div>
    </article>
  </div>
<% end %>
