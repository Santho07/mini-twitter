<!-- A single tweet  -->

<div class="tweet-card box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <div class="header">
          <%= link_to tweet do %>
            <p>
              <strong><%= tweet.author.name %></strong>
              <small>@<%= tweet.author.username %></small>
            </p>
          <% end %>
        </div>
        <div class="body">
          <%= link_to tweet do %>
            <p><%= tweet.body %></p>
          <% end %>
        </div>
      </div>
      <nav class="actions level">
        <div class="level-left">
          <%= link_to 'Like' %>
          <%= link_to 'Comment', tweet %>
        </div>
        <div class="level-right">
          <% if signed_in? && current_user.id == tweet.author_id %>
            <%= link_to tweet, method: :delete, data: { confirm: "Are you sure you want to delete this tweet?" } do %>
                <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            <% end %>
          <% end %>
        </div>
      </nav>
    </div>
  </article>
</div>
