<%= simple_form_for tweet do |f| %>
  <article class="media">
    <div class="media-content">
      <div class="field">
        <p class="control">
          <%= f.input :body, placeholder: 'What\'s happening?', label: false,  input_html: { class: "textarea has-fixed-size"}%>
        </p>
      </div>
      <nav class="level mb-2 is-justify-content-flex-end">
        <div class="level-right">
          <div class="level-item">
            <%= f.button :submit, 'Post', class: 'button is-info', remote: true %>
          </div>
        </div>
      </nav>
    </div>
  </article>
<% end %>
